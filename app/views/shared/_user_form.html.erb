<%= form_for @user, url: moar_login_path(@user.id) do |f| %>
  <p>Current pic: <%= image_tag @user.pic, :class => "prof_pic" %></p>
  <p>Picture* (URL)</p>
  <p><%= f.text_field :pic, size: "20x100" %></p>
  <p>Name*</p>
  <p><%= f.text_field :name %></p>
  <p>Email*</p>
  <p><%= f.text_field :email %></p>
  <p><%= f.submit :Submit %></p>
  <% end %>
